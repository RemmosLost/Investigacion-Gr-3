<div class="container p-4">
    <div class="row"> 
        <div class="mx-auto">
            <div class="card">
                <div class="card-body">
                   <h1 class="card-title d-flex justify-content-between align-items-center">
                        Hola {{user.value.name}}! Aqui estan tus notas.
                    </h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class= "row">
    {{#each showresult}}
        <div class="col-md-3">
            <div class = "card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                       {{prototype.title}} <a href="/notes/edit/{{prototype.nid}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>
                      {{prototype.content}}
                    </p>
                    <a href="/notes/delete/{{prototype.nid}}" class="btn btn-danger btn-block btn-sm">Eliminar</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="container p-4">
            <div class="row"> 
                 <div class="col-md-4 mx-auto">
                    <div class="card">
                         <div class="card-body">
                             <p class="lead">Parece que aun no tienes ninguna nota</p>
                             <a href="/notes/add" class="btn btn-success btn-block">Crear notas</a>
                         </div>
                    </div>
                </div>
            </div>
        </div>
</div>
    {{/each}}
</div>